<div class="main-container">
  <h1>Cocktail World</h1>
<%= link_to "Add cocktail", new_cocktail_path %>
<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-3">
    <% @cocktails.each do |cocktail| %>
      <%= link_to cocktail_path(cocktail) do %>
      <div class="card m-4" id="pic" style="width: 18rem;">
        <%= cl_image_tag cocktail.photo %>
        <div class="card-body">
          <h5 class="card-title"><%= cocktail.name %></h5>
        </div>
      </div>
      <% end %>
    <% end %>
    </div>
  </div>
</div>
</div>

