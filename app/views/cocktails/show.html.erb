<div class="container" id="white-text">
<h1><%= @cocktail.name %></h1>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% @cocktail.doses.each do |dose| %>
<ul>
<li> <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you really sure...?" } do %>
<i class="fas fa-minus-square"></i> |
<%= dose.ingredient.name %> || <%= dose.description %></li>
<% end %>
</ul>
<% end %>

<p><%= link_to "Add Dose", new_cocktail_dose_path(@cocktail) %>
||<%= link_to "Back to Cocktails", root_path %></p>
</div>

